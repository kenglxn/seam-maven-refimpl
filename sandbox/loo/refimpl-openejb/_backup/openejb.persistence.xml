<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
		http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  
	<!-- 
		Needed by OpenEJB
		OpenEJB embedded does not aggregate persistence.xml from src/test/resources/persistence.xml
		We must maintain twl almost identical persistence.xml's - the one for testing is then
		prefixed with openejb, e.g. openejb.persistence.xml. See config in OpenEjbBootstrap class.
	-->
			
  <persistence-unit name="${app.persistence.unit.name}" transaction-type="JTA">  
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <jta-data-source>${app.jta.data.source}</jta-data-source>
    <non-jta-data-source>${app.jndi.name}Unmanaged</non-jta-data-source>
    <properties>
    	<!-- 
      <property name="jboss.entity.manager.factory.jndi.name" 
      					value="${app.persistence.unit.jndi.name}"/>
			-->
			
      <property name="hibernate.dialect" 
      					value="${ds.hibernate.dialect}"/>
      <property name="hibernate.hbm2ddl.auto" 
      					value="${env.hibernate.hbm2ddl.auto}"/>
      <property name="hibernate.default_batch_fetch_size" 
      					value="${env.hibernate.default_batch_size}"/>
      <property name="hibernate.show_sql" 
      					value="${env.hibernate.show_sql}"/>
      <property name="hibernate.format_sql" 
      					value="${env.hibernate.format_sql}"/>
      					
			<!-- Encoding -->      
			<property name="hibernate.connection.useUnicode" 
								value="true" />
			<property name="hibernate.connection.characterEncoding" 
								value="UTF-8" />
			
      <!-- These are the default for JBoss EJB3, but not for HEM: -->
      <property name="hibernate.cache.provider_class" 
      					value="org.hibernate.cache.HashtableCacheProvider"/>
      <property name="hibernate.transaction.manager_lookup_class" 
      					value="org.hibernate.transaction.JBossTransactionManagerLookup"/>
			
			<!-- Remaining is OpenEJB spesific -->
			<property name="hibernate.transaction.manager_lookup_class"
								value="org.apache.openejb.hibernate.TransactionManagerLookup" />
			<property name="hibernate.connection.driver_class" 
								value="${ds.driver.class}" />
			<property name="hibernate.connection.url" 
								value="${ds.connection.url}" />
			<property name="hibernate.connection.release_mode" 
								value="after_transaction" />
					
			<!-- Gives exception (at least for Hsql in-memory database): 
			<property name="hibernate.connection.username" 
								value="${ds.user.name}" />
			<property name="hibernate.connection.password" 
								value="${ds.password}" />
			-->
    </properties>
  </persistence-unit>
   
</persistence>
