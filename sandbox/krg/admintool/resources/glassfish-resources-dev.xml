<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE resources PUBLIC "-//Sun Microsystems, Inc.//DTD Application Server 9.0 Resource Definitions //EN"
    "http://www.sun.com/software/appserver/dtds/sun-resources_1_3.dtd">
<resources>
    <jdbc-connection-pool
        name="admintoolPool"
        datasource-classname="org.apache.derby.jdbc.EmbeddedDataSource"
        res-type="javax.sql.DataSource">
        <property name="database" value="jdbc:derby:test;create=true"/> <!-- HSQLDB uses database instead of url -->
        <property name="url" value="jdbc:derby:test;create=true"/>
        <property name="user" value="sa"/>
        <property name="password" value=""/> <!-- Use the value "()" for an empty password -->
    </jdbc-connection-pool>
    <jdbc-resource
        jndi-name="admintoolDatasource"
        pool-name="admintoolPool"
        enabled="true"
        object-type="user"/>
</resources>
